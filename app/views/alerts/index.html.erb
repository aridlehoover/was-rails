<p id="notice"><%= notice %></p>

<h1>Alerts</h1>

<table>
  <thead>
    <tr class="table-row">
      <th>Title</th>
      <th>Location</th>
      <th>Message</th>
      <th>Publish at</th>
      <th>Effective at</th>
      <th>Expires at</th>
      <th colspan="4"></th>
    </tr>
  </thead>
  <tbody>
    <% @alerts.each do |alert| %>
      <tr>
        <td class="textarea"><%= alert.title %></td>
        <td class="text"><%= alert.location %></td>
        <td class="textarea"><%= alert.message %></td>
        <td class="date"><%= alert.publish_at %></td>
        <td class="date"><%= alert.effective_at %></td>
        <td class="date"><%= alert.expires_at %></td>
        <td><%= link_to 'Show', alert %></td>
        <td><%= link_to 'Edit', edit_alert_path(alert) %></td>
        <td><%= link_to 'Destroy', alert, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Notify', { controller: :notifications, action: :create, params: { notification: { id: alert.id, notification_type: 'alert' } } }, method: :post %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Alert', new_alert_path %>
